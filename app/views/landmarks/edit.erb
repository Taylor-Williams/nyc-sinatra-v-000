<h2>Edit Historical Landmark</h2>

<h2>Edit <%=@landmark.name%>!</h2>
<form class="edit_landmark" action="/landmarks/<%=@landmark.id%>" method="post">
  <label for="landmark_name">landmark Name:</label>
  <input type="text" name="landmark[name]" id="landmark_name">
  <br>
  <p>does your Landmark have any of these titles?</p>
  <%@titles.each do |title|%>
  <input type="checkbox" name="landmark[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"> <%="checked" if @figure.title_ids.include?(title.id)%>><%=title.name%>
  <% end %>
  <br>
  <p>does your Landmark have any of these figures?</p>
  <%@figures.each do |figure|%>
  <input type="checkbox" name="landmark[figure_ids][]" value="<%=figure.id%>" id="figure_<%=figure.id%>" <%="checked" if @landmark.figure_ids.include?(figure.id)%>><%=figure.name%>
  <% end %>
  <br>
  <label for="landmark_figure">Create a new figure for your Landmark:</label>
  <input type="text" name="figure[name]" id="new_figure">
  <label for="landmark_title">Create a new title for your Landmark (make multiple by comma separating them):</label>
  <input type="text" name="title[name]" id="new_title">
  <input type="submit" value="Edit Landmark">
</form>


<a class="button" href="/landmark">Landmarks</a>
<a class="button" href="/">Home</a>
